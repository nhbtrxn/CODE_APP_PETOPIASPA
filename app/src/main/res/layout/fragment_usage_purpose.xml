<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nhom9.fragment.UsagePurposeFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_gravity="center"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:paddingTop="13dp"
        android:text="MỤC ĐÍCH SỬ DỤNG\nTHÔNG TIN"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật lần cuối: 24/05/2025"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Cung cấp và duy trì hoạt động của ứng dụng."
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:justificationMode="inter_word"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Quản lý tài khoản người dùng."
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:justificationMode="inter_word"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Gửi thông báo, ưu đãi hoặc tin tức về sản phẩm/dịch vụ."
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:justificationMode="inter_word"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Cải thiện trải nghiệm người dùng."
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:justificationMode="inter_word" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Liên hệ khi cần thiết (hỗ trợ, phản hồi yêu cầu)."
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:justificationMode="inter_word"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Phục vụ mục đích pháp lý nếu có yêu cầu."
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:justificationMode="inter_word" />
</LinearLayout>